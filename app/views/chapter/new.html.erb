<div class="content-wrapper">
  <div class="content">
    <div class="scenario chapter">

      <h2>Second step</h2>

      <div class="scenario_content">

        <h3>Create your chapters</h3>

        <%= form_for @chapter, url: {action: "create"} do |f| %>
            <div class="scenario_content_form__active row">
              <div class="col m4">
                <div class="input-field file-field">
                  <%= f.label :picture %>
                  <%= f.file_field :picture %>
                </div>
              </div>
              <div class="col m8">
                <div class="input-field">
                  <%= f.label :title %>
                  <%= f.text_field :title %>
                </div>
                <div class="input-field">
                  <p>Description :</p>
                  <%= f.text_area :description %>
                </div>
              </div>
            </div>

            <%= hidden_field_tag :world_id, :value => @world_id %>

            <div class="row">
              <%= f.submit "Next step", :class => "scenario_content_form__submit" -%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>