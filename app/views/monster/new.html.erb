<div class="content-wrapper">
  <div class="content">
    <div class="scenario chapter">

      <h2>Fifth step</h2>

      <div class="scenario_content">

        <h3>Create your monsters</h3>

        <%= form_for @monster, url: {action: "create"} do |f| %>
            <div class="scenario_content_form__active row">
              <div class="col m4">
                <div class="input-field">
                  <%= f.label :name %>
                  <%= f.text_field :name %>
                </div>
              </div>
              <div class="col m8">
                <div class="row">
                  <div class="input-field col m6">
                    <%= f.label :attack_min %>
                    <%= f.number_field :attack_min %>
                  </div>
                  <div class="input-field col m6">
                    <%= f.label :attack_max %>
                    <%= f.number_field :attack_max %>
                  </div>
                  <div class="input-field col m6">
                    <%= f.label :armor %>
                    <%= f.number_field :armor %>
                  </div>
                  <div class="input-field col m6">
                    <%= f.label :life %>
                    <%= f.number_field :life %>
                  </div>
                </div>
              </div>
            </div>

            <%= hidden_field_tag :world_id, :value => @world_id %>

            <div class="row">
              <%= f.submit "Next step", :class => "scenario_content_form__submit" -%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>