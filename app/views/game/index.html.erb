<%= form_tag({controller: "game", action: "activate_chapter"}) do -%>
  <%= select_tag :chapter_id, options_from_collection_for_select(@world.chapters, "id", "title") %>
  <%= hidden_field_tag :world_id, @world.id %>
  <p><%= submit_tag "Create" -%></p>
<% end %>

<%= form_tag({controller: "game", action: "activate_event"}) do -%>
  <%= select_tag :event_id, options_from_collection_for_select(@world.chapters.active.events, "id", "title") %>
  <%= hidden_field_tag :world_id, @world.id %>
  <p><%= submit_tag "Create" -%></p>
<% end %>
