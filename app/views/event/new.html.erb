<div class="content-wrapper">
  <div class="content">
    <div class="scenario chapter">

      <h2>Third step</h2>

      <div class="scenario_content">

        <h3>Create your events</h3>

        <%= form_for @event, url: {action: "create"} do |f| %>
            <div class="scenario_content_form__active row">
              <div class="col m4">
                <div class="input-field">
                  <%= f.label :picture %>
                  <%= f.text_field :picture %>
                </div>
              </div>
              <div class="col m8">
                <div class="input-field">
                  <%= f.label :title %>
                  <%= f.text_field :title %>
                </div>
                <div class="input-field">
                  <%= f.label :description %>
                  <%= f.text_field :description %>
                </div>
              </div>
            </div>

            <%= hidden_field_tag :world_id, :value => @world_id %>

            <div class="row">
              <%= f.submit "Next step", :class => "scenario_content_form__submit" -%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>